<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Define the border -->
    <stroke
        android:width="2dp"
        android:color="#03A6F0" />  <!-- Border color (blue) -->

    <!-- Define the corner radius -->
    <corners android:radius="15dp" />  <!-- Rounded corners -->

    <!-- Optional: Define padding inside the shape -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
