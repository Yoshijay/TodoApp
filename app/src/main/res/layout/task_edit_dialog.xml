<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:background="@drawable/pop_up_dialog_style">

    <ImageButton
        android:id="@+id/edit_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/ic_action_cancel" />

    <EditText
        android:id="@+id/txt_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        android:text="This is a popup window."
        android:textSize="16sp" />


    <Button
        android:id="@+id/btn_save_edit"
        android:layout_width="100dp"
        android:layout_height="48dp"

        android:layout_below="@+id/txt_p"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="21dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Save"
        android:textColor="@color/white" />

    <!--    <ImageButton-->
<!--        android:id="@+id/edit_save"-->
<!--        android:layout_width="30dp"-->
<!--        android:layout_height="30dp"-->
<!--        android:layout_below="@+id/txt_p"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_marginTop="3dp"-->
<!--        android:layout_marginEnd="26dp"-->
<!--        android:layout_marginBottom="5dp"-->
<!--        android:background="@drawable/ic_action_save" />-->

</RelativeLayout>






