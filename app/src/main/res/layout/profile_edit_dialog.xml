<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/pop_up_dialog_style"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <ImageButton
        android:id="@+id/edit_profile_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/ic_action_cancel" />

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/white"
        android:text=""
        android:textSize="16sp" />


    <Button
        android:id="@+id/btn_save_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_below="@id/txt_edit_email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Save"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_lbl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_id"
        android:layout_marginTop="5dp"
        android:text="Name" />

    <EditText
        android:id="@+id/txt_edit_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/txt_lbl_name"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/btn_corner_round"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/lbl_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_edit_name"
        android:layout_marginTop="30dp"
        android:text="Age" />

    <EditText
        android:id="@+id/txt_edit_age"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/lbl_age"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/btn_corner_round"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/lbl_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_edit_age"
        android:layout_marginTop="30dp"
        android:text="Contact" />

    <EditText
        android:id="@+id/txt_edit_contact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/lbl_contact"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/btn_corner_round"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/lbl_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_edit_contact"
        android:layout_marginTop="30dp"
        android:text="Email" />

    <EditText
        android:id="@+id/txt_edit_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/lbl_email"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/btn_corner_round"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:text="TextView" />

    <!--    <ImageButton-->
    <!--        android:id="@+id/edit_save"-->
    <!--        android:layout_width="30dp"-->
    <!--        android:layout_height="30dp"-->
    <!--        android:layout_below="@+id/txt_p"-->
    <!--        android:layout_alignParentEnd="true"-->
    <!--        android:layout_marginTop="3dp"-->
    <!--        android:layout_marginEnd="26dp"-->
    <!--        android:layout_marginBottom="5dp"-->
    <!--        android:background="@drawable/ic_action_save" />-->

</RelativeLayout>






